<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.galihpw.simak.MateriActivity">

    <TextView
        android:text="Hari, Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHariTglMateri"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Matkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvHariTglMateri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvMatkulMateri" />

    <TextView
        android:text="(KodeMatkul)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvKodeMatkulMateri"
        android:layout_alignBaseline="@+id/tvMatkulMateri"
        android:layout_alignBottom="@+id/tvMatkulMateri"
        android:layout_toRightOf="@+id/tvMatkulMateri"
        android:layout_toEndOf="@+id/tvMatkulMateri"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:id="@+id/listviewMateri"
        android:divider="#ff474d"
        android:dividerHeight="2dp"
        android:layout_below="@+id/bTambahMateri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtMateri"
        android:background="@drawable/border"
        android:hint="Isi Materi"
        android:layout_below="@+id/tvMatkulMateri"
        android:layout_marginTop="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:text="Publikasikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMateri"
        android:layout_alignParentRight="true"
        android:id="@+id/bTambahMateri" />

</RelativeLayout>
