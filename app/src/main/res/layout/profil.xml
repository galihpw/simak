<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:text="OK"
        android:layout_height="wrap_content"
        android:id="@+id/okecoy"
        android:layout_width="50dp"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignRight="@+id/linearLayout7"
        android:layout_alignEnd="@+id/linearLayout7" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/linearLayout7"
        android:layout_width="210dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="NIM"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView9"
                android:layout_width="82dp"
                android:gravity="left|center" />

            <TextView
                android:text=": nimDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/nama"
                android:layout_alignStart="@+id/nama"
                android:id="@+id/nim"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="Nama"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView10"
                android:layout_width="82dp"
                android:gravity="left|center" />

            <TextView
                android:text=": namaDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:layout_above="@+id/nim"
                android:layout_alignLeft="@+id/noKontak"
                android:layout_alignStart="@+id/noKontak"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="Kelas"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView11"
                android:layout_width="82dp"
                android:gravity="left|center" />

            <TextView
                android:text=": kelasDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView12"
                android:layout_alignLeft="@+id/nim"
                android:layout_alignStart="@+id/nim"
                android:id="@+id/kelas"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="No. Kontak"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:id="@+id/textView12"
                android:gravity="left|center" />

            <TextView
                android:text=": kontakDummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noKontak"
                android:layout_below="@+id/kelas"
                android:layout_weight="0.22" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="Alamat"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView13"
                android:layout_width="82dp"
                android:gravity="left|center" />

            <TextView
                android:text=": alamatDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alamat"
                android:inputType="textMultiLine"
                android:layout_below="@+id/noKontak"
                android:layout_alignLeft="@+id/noKontak"
                android:layout_alignStart="@+id/noKontak"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:text="Bintang"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView20"
                android:layout_width="82dp"
                android:gravity="left|center" />

            <TextView
                android:text=": bintangDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView20"
                android:layout_alignLeft="@+id/alamat"
                android:layout_alignStart="@+id/alamat"
                android:id="@+id/jBintang"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="85dp"/>

    <Button
        android:text="Tambahkan Bintang!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bTambah"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/okecoy"
        android:layout_alignBottom="@+id/okecoy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>